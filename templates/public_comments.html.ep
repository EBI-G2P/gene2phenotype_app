<div>
  <h3>Comments</h3>
  
  <% if (scalar @{$gfd->{comments}} == 0) { %>
    <p>
      <label>No comments have been assigned to the G2P entry yet.</label>
    </p>
  <% }
  
  <% foreach my $comment (@{$gfd->{comments}}) { %>
    <div class="comments">
      % if ($comment->{is_public} == 1){
        <p> <%= $comment->{comment_text} %> </p>
      %}
    </div>
  <% } %>
</div>
  
